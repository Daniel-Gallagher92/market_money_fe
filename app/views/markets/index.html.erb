<center>
  <h1>Markets</h1>

  <table>
    <thead>
      <tr>
        <th scope="col">Name </th>
        <th scope="col">City </th>
        <th scope="col">State </th>
        <th scope="col"></th>
      </tr>
    </thead>

    <% @markets.each do |market| %>
      <tr id="market-<%= market.id%>">
        <td><%= market.name %></td>
        <td><%= market.city %></td>
        <td><%= market.state %></td>
        <td><%= button_to "More Info", market_path(market.id), method: :get %></td>
      </tr>
    <% end %>
  </table>
</center>